<!DOCTYPE html>
<html lang="es">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0"/>
  <title>Recuperación de usuario</title>
  <link rel="icon" type="image/x-icon" href="<%= frontendUrl %>/assets/logofondoblanco.png">
  <link rel="stylesheet" href= "<%= frontendUrl %>/assets/main-D-5dOeFD.css"/>
  <!-- CSS externos -->
  <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.0/css/all.min.css"/>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/css/bootstrap.min.css" rel="stylesheet" crossorigin="anonymous">
</head>  

<body class="body-ingresar">
 <header style="background-color:var(--rosita-verde) !important;">
  <div class="menu-nav d-flex flex-column flex-md-row justify-content-between align-items-center p-3">
    <div>
      <img src="<%= frontendUrl %>/assets/logosaborosita.png" class="logo" alt="Logo El sabor de Rosita">
    </div>
    <div class="menu-horizontal mt-2 mt-md-0">
      <ul class="nav justify-content-end">
        <li class="nav-item">
          <a class="nav-link" aria-current="page" href="<%= frontendUrl %>/ingresarUsuario">Salir</a>
        </li>
      </ul>
    </div>
  </div>
</header>

  <main class="container mt-5" >
    <h2 class="text-center mb-4" style="color: var(--rosita-blanco);">Recuperar Contraseña</h2>

    <form id="resetForm" class="w-100 mx-auto" style="max-width: 400px;">
      <div class="mb-3">
        <label for="newPassword" class="form-label letter-gold">Nueva Contraseña</label>
        <input type="password" id="newPassword" class="form-control" placeholder="Nueva contraseña" required />
      </div>
      <button type="submit" class="btn btn-primary w-100">Guardar nueva contraseña</button>
    </form>
  </main>

  <!-- Scripts externos -->
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.7/dist/js/bootstrap.bundle.min.js" crossorigin="anonymous"></script>
  <script>
    const urlParams = new URLSearchParams(window.location.search);
    const token = urlParams.get('token');

    document.getElementById('resetForm').addEventListener('submit', async (e) => {
      e.preventDefault();
      const passwordInput = document.getElementById('newPassword');
      const password = passwordInput.value.trim();

      if (!token) {
        alert('Error: Token no encontrado en la URL.');
        return;
      }
      if (!password) {
        alert('Por favor ingresa una nueva contraseña.');
        passwordInput.focus();
        return;
      }
      if (password.length < 4) {
        alert('La contraseña debe tener al menos 4 caracteres.');
        passwordInput.focus();
        return;
      }

      try {
        const res = await fetch('<%= BACKEND_URL %>/api/ingresar/reset-password', {
          method: 'POST',
          headers: { 'Content-Type': 'application/json' },
          body: JSON.stringify({ token, password })
        });

        const data = await res.json();
        alert(data.message);

        if (res.ok) {
          setTimeout(() => {
            window.location.href = '<%= frontendUrl %>/ingresarUsuario';
          }, 1500);
        }
      } catch (error) {
        alert('Error del servidor al intentar actualizar la contraseña.');
      }
    });
  </script>
   <script type="module" src="<%= frontendUrl %>/assets/main-DdW_nCAb.js "></script>
</body>
</html>
